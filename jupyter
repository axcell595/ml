import seaborn as sns
import matplotlib.pyplot as plt

plt.figure(figsize=(10,7))  # larger figure
sns.set_theme(style="white")

ax = sns.heatmap(
    stress,
    annot=True,
    fmt=".1f",
    cmap="RdYlBu_r",        # smoother red–blue palette
    linewidths=0.5,         # thin grid lines
    linecolor='gray',
    cbar_kws={'label': 'Stress Level (1–10)'}
)

# Better labels
ax.set_xlabel("Sleep Quality (1–10)", fontsize=12, labelpad=12)
ax.set_ylabel("Days Without Social Media", fontsize=12, labelpad=12)
ax.set_title(
    "Stress Level vs Days Without Social Media and Sleep Quality",
    fontsize=14,
    pad=20,
    weight='bold'
)

plt.xticks(rotation=0, fontsize=10)
plt.yticks(rotation=0, fontsize=10)
plt.tight_layout()          # fixes overlapping margins
plt.show()
